<div id="pager">
<table id="table" class="table table-bordered table-stripped">
	<thead>
		<tr>
		   <th>SI No</th>
			<th>Projects</th>
			<th>Username</th>
			<th>Category Name</th>
		</tr>
	</thead>
	<%count = 0%>
	<tbody>
	<% @products.each do |p|%>
		<tr>
		    <td><%= count = count + 1%></td>
			<td><%= p.name%></td>
			<td><%= p.user.email%></td>
			<td><%= p.category.name%></td>
		</tr>
	</tbody>
	<%end%>
</table>
</div>
